<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme for Curify -->
    <style name="Base.Theme.Curify" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_variant</item>
        <item name="colorOnPrimaryContainer">@color/on_primary</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/background</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/surface</item>
        
        <!-- Material 3 components -->
        <item name="materialButtonStyle">@style/Widget.Curify.Button</item>
        <item name="textInputStyle">@style/Widget.Curify.TextInputLayout</item>
    </style>

    <style name="Theme.Curify" parent="Base.Theme.Curify" />

    <!-- Splash Theme -->
    <style name="Theme.Curify.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_curify</item>
        <item name="postSplashScreenTheme">@style/Theme.Curify</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.Curify.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Curify.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="Widget.Curify.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">@dimen/radius_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_medium</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_medium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_medium</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.Curify.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/radius_medium</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>
</resources>
